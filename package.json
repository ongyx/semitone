{
  "name": "vscode-csproj",
  "displayName": "VS Code .csproj",
  "description": "Add/remove files from .csproj.",
  "version": "0.7.0",
  "publisher": "lucasazzola",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "img/icon.png",
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.csproj.add",
        "title": "csproj: Include in Project"
      },
      {
        "command": "extension.csproj.remove",
        "title": "csproj: Remove from Project"
      },
      {
        "command": "extension.csproj.clearIgnoredPaths",
        "title": "csproj: Clear Ignored Paths"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "csproj configuration",
      "properties": {
        "csproj.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Turn this extension on or off."
        },
        "csproj.itemType": {
          "type": [
            "string",
            "object"
          ],
          "default": {
            "*": "Content",
            ".cs": "Compile",
            ".ts": "TypeScriptCompile"
          },
          "description": "Type of XML element to put in the csproj file."
        },
        "csproj.includeRegex": {
          "type": [
            "string",
            "null"
          ],
          "default": ".*",
          "description": "A regular expression to include file paths by."
        },
        "csproj.excludeRegex": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "A regular expression to exclude file paths by."
        },
        "csproj.autoAdd": {
          "type": "string",
          "enum": [
            "on",
            "prompt",
            "off"
          ],
          "enumDescriptions": [
            "Automatically add new items.",
            "Prompt before adding new items.",
            "Don't prompt to add new items."
          ],
          "default": "prompt",
          "description": "Whether or not to add items to the csproj file when new files are created."
        },
        "csproj.autoDelete": {
          "type": "string",
          "enum": [
            "on",
            "prompt",
            "off"
          ],
          "enumDescriptions": [
            "Automatically delete removed items.",
            "Prompt before deleting removed items.",
            "Don't prompt to delete removed items."
          ],
          "default": "prompt",
          "description": "Whether or not to delete items from the csproj file when their existing files are removed."
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "extension.csproj.add",
          "group": "1_modification"
        },
        {
          "command": "extension.csproj.remove",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "package": "vsce package --allow-star-activation"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/mz": "2.7.9",
    "@types/node": "^24.3.1",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.6.0",
    "chai": "^6.0.1",
    "mocha": "^11.7.2",
    "mock-fs": "^5.5.0",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azz/vscode-csproj.git"
  },
  "dependencies": {
    "@azz/elementtree": "^0.1.6",
    "lodash.debounce": "^4.0.8",
    "mz": "^2.7.0",
    "strip-bom": "^5.0.0"
  }
}
