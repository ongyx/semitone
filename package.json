{
	"name": "semitone",
	"displayName": "Semitone",
	"description": "Keep your .csproj synchronized with new files.",
	"version": "0.1.1",
	"publisher": "ongyx",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ongyx/semitone.git"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"icon": "img/icon.png",
	"main": "./out/extension.js",
	"private": true,
	"scripts": {
		"clean": "rimraf out",
		"fix": "npx @biomejs/biome check --write",
		"check-types": "tsc --noEmit --project tsconfig.json",
		"watch": "concurrently --kill-others \"npm run watch:esbuild\" \"npm run watch:tsc\"",
		"watch:esbuild": "node esbuild.mjs --watch",
		"watch:tsc": "tsc --watch --project tsconfig.json",
		"compile": "npm run check-types && npm run clean && node esbuild.mjs",
		"package": "npm run check-types && npm run clean && node esbuild.mjs --production",
		"test": "npm run compile && tsc --project tsconfig.json && vscode-test",
		"vscode:prepublish": "npm run fix && npm run package",
		"vscode:package": "vsce package --allow-star-activation",
		"vscode:publish": "vsce publish --allow-star-activation"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.19.27",
		"@types/sinon": "^21.0.0",
		"@types/vscode": "^1.100.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.1",
		"esbuild": "^0.27.2",
		"mocha": "^11.7.5",
		"rimraf": "^6.1.2",
		"sinon": "^21.0.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"cheerio": "^1.1.2",
		"domelementtype": "^2.3.0",
		"domhandler": "^5.0.3",
		"minimatch": "^10.1.1",
		"p-debounce": "^5.1.0"
	},
	"contributes": {
		"commands": [
			{
				"command": "extension.csproj.add",
				"title": "csproj: Add to project"
			},
			{
				"command": "extension.csproj.remove",
				"title": "csproj: Remove from project"
			},
			{
				"command": "extension.csproj.refresh",
				"title": "csproj: Refresh file status"
			},
			{
				"command": "extension.csproj.configure",
				"title": "csproj: Configure projects"
			},
			{
				"command": "extension.csproj.addIgnoredPath",
				"title": "csproj: Add to ignored paths"
			},
			{
				"command": "extension.csproj.clearIgnoredPaths",
				"title": "csproj: Clear ignored paths"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Semitone (csproj)",
			"properties": {
				"csproj.projectFiles": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "projectFile",
						"properties": {
							"path": {
								"type": "string",
								"description": "The path to the project."
							},
							"glob": {
								"type": "string",
								"description": "The file, directory, or a glob to match paths against."
							}
						}
					},
					"default": [],
					"description": "The projects to sync to in order of priority."
				},
				"csproj.itemType": {
					"type": [
						"string",
						"object"
					],
					"default": {
						"*": "Content",
						".cs": "Compile",
						".ts": "TypeScriptCompile"
					},
					"description": "The project item type for each file extension (https://learn.microsoft.com/en-us/visualstudio/msbuild/common-msbuild-project-items)."
				},
				"csproj.includeRegex": {
					"type": [
						"string",
						"null"
					],
					"default": ".*",
					"description": "A regular expression to include file paths by."
				},
				"csproj.excludeRegex": {
					"type": [
						"string",
						"null"
					],
					"default": "(\\.csproj|\\.sln|\\.slnx)$",
					"description": "A regular expression to exclude file paths by."
				},
				"csproj.autoAdd": {
					"type": "string",
					"enum": [
						"on",
						"prompt",
						"off"
					],
					"enumDescriptions": [
						"Automatically add new items.",
						"Prompt before adding new items.",
						"Don't prompt to add new items."
					],
					"default": "prompt",
					"description": "Whether or not to add items when new files are opened or saved."
				},
				"csproj.autoDelete": {
					"type": "string",
					"enum": [
						"on",
						"prompt",
						"off"
					],
					"enumDescriptions": [
						"Automatically remove deleted items.",
						"Prompt before removing deleted items.",
						"Don't prompt to remove deleted items."
					],
					"default": "prompt",
					"description": "Whether or not to remove items when their corresponding files are deleted."
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "extension.csproj.add",
					"group": "1_modification"
				},
				{
					"command": "extension.csproj.remove",
					"group": "1_modification"
				}
			]
		}
	}
}
